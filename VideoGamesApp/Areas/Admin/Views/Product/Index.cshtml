@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
          <h2 class="text-primary">
                Product List
          </h2>
      </div>
      <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Create new product
          </a>
      </div>
  </div>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            Title
        </th>
        <th>
            Serial Number
        </th>
        <th>
            Publisher 
        </th>
        <th>
            Price
        </th>
         <th>
            Category
         </th>
    </tr>
    <thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.SerialNumber</td>
                    <td>@obj.Publisher</td>
                    <td>@obj.Price</td>
                    <td></td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </thead>
</table>
