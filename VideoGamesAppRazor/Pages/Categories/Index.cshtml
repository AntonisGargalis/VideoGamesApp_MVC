@page
@model VideoGamesAppRazor.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
          <h2 class="text-primary">
              Category List
          </h2>
      </div>
      <div class="col-6 text-end">
          <a asp-page="/categories/create"  class="btn btn-primary">
               Create new category
          </a>
      </div>
  </div>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            Category
        </th>
        <th>
            Display
        </th>
        <th>

        </th>
    </tr>
    <thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/edit"  asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                            <a asp-page="/categories/delete"  asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </thead>
</table>

